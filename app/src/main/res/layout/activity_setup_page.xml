<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davidbqtran.quickfind.SetupPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <Button
                android:text="Get Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LocationButton" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="ie: H4G 3A9"
                android:maxLines="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Price Range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton4"
                    android:layout_weight="1"
                    android:textOff="$"
                    android:textOn="$" />

                <ToggleButton
                    android:text="$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton3"
                    android:layout_weight="1"
                    android:textOff="$$"
                    android:textOn="$$" />

                <ToggleButton
                    android:text="$$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton2"
                    android:layout_weight="1"
                    android:textOff="$$$"
                    android:textOn="$$$" />

                <ToggleButton
                    android:text="$$$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton"
                    android:layout_weight="1"
                    android:textOff="$$$$"
                    android:textOn="$$$$" />
            </LinearLayout>

            <Switch
                android:text="Transport Mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:textOn="Car"
                android:textOff="Transit"
                android:checked="true"
                style="@android:style/Widget.CompoundButton.Switch"
                android:splitTrack="false" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Find me something >"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SendButton"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button"
        android:textStyle="normal|bold"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    tools:context="com.davidbqtran.quickfind.SetupPage">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"

            android:orientation="vertical">

            <TextView
                android:text="Type of food (+)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foodText"
                android:onClick="ToggleFoodView"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="normal|bold"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="12dp"
                android:onClick="ToggleFoodView"
                android:background="@color/black_overlay"/>

            <Button
                android:text="Toggle All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:onClick="ToggleAll"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <LinearLayout
                android:id="@+id/linearBro"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/list1">


                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BreakFastButton"
                        android:textOff="Breakfast"
                        android:textOn="Breakfast"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/MiddleEastButton"
                        android:textOff="Middle East"
                        android:textOn="Middle East"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PizzaButton"
                        android:textOff="Pizza"
                        android:textOn="Pizza"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/VietButton"
                        android:textOff="Viet"
                        android:textOn="Viet"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ItalianButton"
                        android:textOff="Italian"
                        android:textOn="Italian"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ChineseButton"
                        android:textOff="Chinese"
                        android:textOn="Chinese"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CafeTeaButton"
                        android:textOff="Cafe &amp; Tea"
                        android:textOn="Cafe &amp; Tea"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/list2">

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ThaiButton"
                        android:textOff="Thai"
                        android:textOn="Thai"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/MediterraneanButton"
                        android:textOff="Mediterranean"
                        android:textOn="Mediterranean"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BurgerButton"
                        android:textOff="Burger &amp; Sandwich"
                        android:textOn="Burger &amp; Sandwich"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/IndianButton"
                        android:textOff="Indian"
                        android:textOn="Indian"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BarPubButton"
                        android:textOff="Bar &amp; Pub"
                        android:textOn="Bar &amp; Pub"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/JapaneseButton"
                        android:textOff="Japanese"
                        android:textOn="Japanese"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/FastFood"
                        android:textOff="Fast Food"
                        android:textOn="Fast Food"
                        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="12dp"
                android:background="@color/black_overlay"/>
            <TextView
                android:text="Your location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <Button
                android:text="Detect Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LocationButton"
                android:onClick="GetLocationClick"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editTextLocation"
                android:hint="or enter your location, ie: H4G 3A9"
                android:maxLines="1" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/distanceText" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:progress="5"
                android:max="19"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Price Range"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceToggle1"
                    android:layout_weight="1"
                    android:textOff="$"
                    android:textOn="$"
                    android:text="$" />

                <ToggleButton
                    android:text="$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceToggle2"
                    android:layout_weight="1"
                    android:textOff="$$"
                    android:textOn="$$" />

                <ToggleButton
                    android:text="$$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceToggle3"
                    android:layout_weight="1"
                    android:textOff="$$$"
                    android:textOn="$$$" />

                <ToggleButton
                    android:text="$$$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceToggle4"
                    android:layout_weight="1"
                    android:textOff="$$$$"
                    android:textOn="$$$$" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="12dp"
                android:background="@color/black_overlay"/>
            <Button
                android:text="Find me something!"
                android:layout_width="match_parent"
                android:id="@+id/SendButton"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button"
                android:onClick="FindClick"
                android:layout_height="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>


</ScrollView>
